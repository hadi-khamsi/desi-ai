# Get free API key at https://groq.com
GROQ_API_KEY=your_groq_api_key_here

# Models: llama-3.1-8b-instant (fastest) | llama-3.3-70b-versatile (smartest)
MODEL=llama-3.3-70b-versatile

# TTS: edge (free) | elevenlabs ($22/mo)
TTS_PROVIDER=edge
# Edge voices: en-IN-PrabhatNeural (Male) | en-IN-NeerjaNeural (Female)
VOICE=en-IN-PrabhatNeural

# Only needed if TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Background music volume (0.0-1.0)
MUSIC_VOLUME=0.2

# Response settings
MAX_TOKENS=512
TEMPERATURE=0.75
